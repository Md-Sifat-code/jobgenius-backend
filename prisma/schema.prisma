generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  profile   Profile?
  userCv    UserCv?
}

model Profile {
  id                  Int     @id @default(autoincrement())
  fullName            String
  email               String
  phoneNumber         String
  location            String
  linkedinProfile     String
  portfolioLink       String
  preferredJobRole    String
  professionalSummary String
  userId              Int     @unique
  user                User    @relation(fields: [userId], references: [id])
}

model UserCv {
  id          Int              @id @default(autoincrement())
  fullName    String
  email       String
  phone       String
  location    String
  degree      String
  university  String
  duration    String
  description String
  userId      Int              @unique
  user        User             @relation(fields: [userId], references: [id])
  experiences WorkExperience[]
  skills      String[]
}

model WorkExperience {
  id               Int       @id @default(autoincrement())
  jobTitle         String
  company          String
  startYear        String
  endYear          String
  responsibilities String
  userCvId         Int
  userCv           UserCv    @relation(fields: [userCvId], references: [id])
}
